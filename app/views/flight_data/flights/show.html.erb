<h1>Showing flight <%= @flight.flight_no %></h1>

<table class="table table-striped table-bordered table-hover">

  <thead class="table-dark">
  <tr>
    <th>Flight No.</th>
    <th>Operator</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Duration</th>
    <th>Total Seats</th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @flight.flight_no %></td>
      <td><%= @flight.operator %></td>
      <td><%= @flight.origin %></td>
      <td><%= @flight.destination %></td>
      <td><%= @flight.duration %><span> mins.</span></td>
      <td><%= @flight.total_seats %></td>
    </tr>
  </tbody>

</table>

<%= link_to "Edit", edit_flight_path(@flight), class:"btn btn-dark" %>
<%= button_to "Delete", destroy_flight_path(@flight), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>